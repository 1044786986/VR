<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <!--<ImageView-->
        <!--android:src="@drawable/background"-->
        <!--android:scaleType="fitXY"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

    <ImageView
        android:id="@+id/header"
        android:src="@drawable/back_gray"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30" />

    <LinearLayout
        android:layout_below="@id/header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/logo_300"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/people_blue_64"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />
            <EditText
                android:id="@+id/etUsername"
                android:text="18024163867"
                android:textColor="@color/normalText"
                android:textSize="@dimen/sp_15"
                android:background="@null"
                android:theme="@style/MyEditText"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint= "请输入11位手机号码"/>
        </LinearLayout>
        <View
            android:background="@color/rvLine"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/key_blue_64"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />
            <EditText
                android:id="@+id/etPassword"
                android:textColor="@color/normalText"
                android:textSize="@dimen/sp_15"
                android:inputType="textPassword"
                android:background="@null"
                android:theme="@style/MyEditText"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码 6~16位(不得包含非法字符)" />
        </LinearLayout>
        <View
            android:background="@color/rvLine"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <EditText
                android:id="@+id/etMsg"
                android:text=""
                android:textSize="@dimen/sp_15"
                android:textColor="@color/normalText"
                android:theme="@style/MyEditText"
                android:background="@drawable/bg_mail_et"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btMsg"
                android:text="获取验证码"
                android:textColor="#fff"
                android:background="@color/appTheme"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Button
            android:id="@+id/btRegister"
            android:text="注册"
            android:textColor="#fff"
            android:background="@color/appTheme"
            android:layout_margin="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:indeterminateTint="@color/appTheme"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
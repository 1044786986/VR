<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:clipChildren="false">

    <FrameLayout
        android:id="@+id/frameLayout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/linearLayout_bottomNavigation"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/linearLayout_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:src="@drawable/home_normal" />

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/bottom_text_normal"/>
        </LinearLayout>

        <!--<View-->
            <!--android:background="@color/rvLine"-->
            <!--android:layout_width="@dimen/dp_0_1"-->
            <!--android:layout_height="match_parent"/>-->

        <LinearLayout
            android:id="@+id/linearLayout_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivFind"
                android:layout_width="@dimen/dp_27"
                android:layout_height="@dimen/dp_27"
                android:layout_gravity="center"
                android:src="@drawable/earth_normal" />

            <TextView
                android:id="@+id/tvFind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:text="发现"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/bottom_text_normal"/>
        </LinearLayout>

        <!--<View-->
            <!--android:background="@color/rvLine"-->
            <!--android:layout_width="@dimen/dp_0_1"-->
            <!--android:layout_height="match_parent"/>-->

        <LinearLayout
            android:id="@+id/linearLayout_VR"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_70"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivVR"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:layout_gravity="center"
                android:src="@drawable/vr_yellow_200" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearLayout_foot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivFoot"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:src="@drawable/foot_normal" />

            <TextView
                android:id="@+id/tvFoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="足迹"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/bottom_text_normal"/>
        </LinearLayout>

        <!--<View-->
            <!--android:background="@color/rvLine"-->
            <!--android:layout_width="@dimen/dp_0_1"-->
            <!--android:layout_height="match_parent"/>-->

        <LinearLayout
            android:id="@+id/linearLayout_personal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivPersonal"
                android:layout_width="@dimen/dp_27"
                android:layout_height="@dimen/dp_27"
                android:layout_gravity="center"
                android:src="@drawable/app_normal" />

            <TextView
                android:id="@+id/tvPersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:text="个人"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/bottom_text_normal"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/appBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/appTheme"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/ivBack"
            android:src="@drawable/back_white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvCommunity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@color/rvLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/smiling_face_gray_100" />

            <EditText
                android:id="@+id/etMessage"
                android:textSize="@dimen/sp_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:imeOptions="actionSend"
                android:inputType="textLongMessage"
                android:maxHeight="100dp"
                android:maxLines="8"
                android:textColor="@color/normalEditText"
                android:theme="@style/MyEditText" />

            <ImageView
                android:id="@+id/ivAddImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/add_gray_100" />

            <View
                android:layout_width="@dimen/dp_0_1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/rvLine"
                android:baselineAligned="false" />

            <ImageView
                android:id="@+id/ivSend"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_8"
                android:src="@drawable/send_pink_100"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:background="@color/rvLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"/>
        <LinearLayout
            android:id="@+id/layout_addImage"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivAlbum"
                android:visibility="visible"
                android:src="@drawable/album_blue"
                android:layout_margin="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50" />

            <ImageView
                android:id="@+id/ivCamera"
                android:visibility="visible"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/camera_blue"/>

            <!--<ImageView-->
                <!--android:id="@+id/ivCommunity"-->
                <!--android:visibility=""-->
                <!--android:src="@mipmap/ic_launcher"-->
                <!--android:scaleType="fitXY"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="140dp" />-->

            <!--<ImageView-->
                <!--android:id="@+id/ivDelete"-->
                <!--android:visibility=""-->
                <!--android:src="@drawable/cancel_gray_60"-->
                <!--android:layout_marginLeft="@dimen/dp_m_5"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp" />-->

        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>